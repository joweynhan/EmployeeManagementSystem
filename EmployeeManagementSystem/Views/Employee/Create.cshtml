@model EmployeeManagementSystem.Models.Employee

@{
    ViewData["Title"] = "Create";
}
<style>
    .selectDep {
        background-color: #eee;
        color: lightcoral;
        box-shadow: 0 0.4rem #dfd9d9;
        width: 20em;
        font-size: 1rem;
        border: none;
        padding: 1rem;
        border-radius: 1rem;
        margin-top: 15px;
    }
    .input-wrapper input {
        background-color: #eee;
        border: none;
        padding: 1rem;
        font-size: 1rem;
        width: 20em;
        border-radius: 1rem;
        color: lightcoral;
        box-shadow: 0 0.4rem #dfd9d9;
        margin-top: 15px;
        cursor: pointer;
    }

        .input-wrapper input:focus {
            outline-color: lightcoral;
        }

</style>
<h2>Create Employee</h2>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="input-wrapper">
                    <input asp-for="Name" class="input form-control" placeholder="Name"/>
                </div>
                    <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="input-wrapper">
                    <input asp-for="DOB" class="input form-control" placeholder="Date of Birth"/>
                </div>
                   <span asp-validation-for="DOB" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="input-wrapper">
                    <input asp-for="Email" class="input form-control"placeholder="Email" />
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="input-wrapper">
                    <input asp-for="Phone" class="input form-control" placeholder="Phone"/>
                </div>
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="input-wrapper">
                    <select asp-for="DepartmentId" class="selectDep form-control" asp-items="ViewBag.DepartmentId"></select>
                </div>
            </div>
            <div class="form-group" style="padding-top:30px;">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style="padding-top:30px;">
    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-table"> </i>Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
